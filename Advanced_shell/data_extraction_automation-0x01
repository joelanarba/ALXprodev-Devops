#!/usr/bin/env bash
# data_extraction_automation-0x01.sh
# Extracts Pok√©mon data from data.json and prints a formatted sentence

# Extract name
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # capitalize first letter

# Extract type (take the first type)
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # capitalize first letter

# Extract weight and height
WEIGHT=$(jq -r '.weight' data.json)
HEIGHT=$(jq -r '.height' data.json)

# Print formatted output
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
