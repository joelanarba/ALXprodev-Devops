#!/usr/bin/env bash
# summaryData-0x03.sh
# Summarizes PokÃ©mon data into a CSV and calculates average height & weight

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Header for CSV
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through all JSON files
for FILE in "$INPUT_DIR"/*.json; do
    NAME=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/')      # capitalize name
    HEIGHT=$(jq -r '.height' "$FILE")
    WEIGHT=$(jq -r '.weight' "$FILE")
    echo "$NAME,$HEIGHT,$WEIGHT" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"

# Calculate average height and weight
awk -F, 'NR>1 {h+=$2; w+=$3; n++} END {printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", h/n, w/n}' "$OUTPUT_FILE"
